<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#1976D2</item>
        <item name="colorAccent">#FF5252</item>
        <item name="colorPrimaryDark">#FF0D47A1</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="preferenceTheme">@layout/preference_material</item>
    </style>

    <style name="AppThemeToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#1976D2</item>
        <item name="colorAccent">#FF5252</item>
        <item name="colorPrimaryDark">#FF0D47A1</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme_NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#1976D2</item>
        <item name="colorAccent">#FF5252</item>
        <item name="colorPrimaryDark">#FF0D47A1</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/PreferenceFragmentMaterial</item>
        <item name="android:textAppearanceListItem">@android:style/TextAppearance.Material.Medium</item>
    </style>

    <style name="PreferenceFragmentMaterial" parent="PreferenceFragment.Material">
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearanceListItem">@android:style/TextAppearance.Material.Medium</item>
    </style>

</resources>